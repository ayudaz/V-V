        </example>
    </rule><rule name="WhileLoopsMustNotUseBooleanDirectly"
        message="Avoid using boolean directly on 'while' statements"
         language="java"
        class="vv.tp3.WhileLoopsMustNotUseBooleanDirectly">
        <description>
            Avoid using boolean directly on 'while' statements
        </description>
        <priority>3</priority>
        
